{
    "swagger": "2.0",
    "info": {
        "title": "Usuario API",
        "version": "1.0.0",
        "description": "API para gerenciamento dos usuarios da biblioteca"
    },
    "servers": [
        {
            "url": "http://localhost:8002"
        }
    ],
    "paths": {
        "/userController/getGeral": {
            "get": {
                "summary": "Obter os usuarios da biblioteca",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "500": {
                        "description": "Erro interno do servidor"
                    }
                }
            }
        },
        "/userController/postUser":{
            "post": {
                "summary": "adiciona a lista de usuarios",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Resposta de sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "description": "O ID do usuario da biblioteca"
                                        },
                                        "nome": {
                                            "type": "string",
                                            "description": "O nome do usuario da biblioteca"
                                        },
                                        "email": {
                                            "type": "integer",
                                            "description": "O email do usuario da biblioteca"
                                        },
                                        "cpf": {
                                            "type": "string",
                                            "description": "O cpf do usuario da biblioteca"
                                        },
                                        "senha": {
                                            "type": "string",
                                            "description": "A senha do usuario da biblioteca"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro na requisição"
                    },
                    "500": {
                        "description": "Erro interno do servidor"
                    }
                }
            }
        },
        "/userController/getWithId": {
            "get": {
                "summary": "Obter um usuario da biblioteca",
                "description": "Retorna um usuario especifico da biblioteca",
                "produces": [
                    "application/json"
                ],
                "parameters": {
                    "in": "path",
                    "name": "id",
                    "schema": {
                        "type": "integer"
                    },
                    "required": true,
                    "description": "O ID do usuario da biblioteca a ser recuperado"
                },
                "responses": {
                    "500": {
                        "description": "Erro interno do servidor"
                    }
                }
            }
        },
        "/userController/updateUser":{
            "put": {
                "summary": "Atualiza o usuario",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Resposta de sucesso na atualizacao do usuario",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "description": "O ID do usuario da biblioteca"
                                        },
                                        "nome": {
                                            "type": "string",
                                            "description": "O nome do usuario da biblioteca"
                                        },
                                        "email": {
                                            "type": "integer",
                                            "description": "O email do usuario da biblioteca"
                                        },
                                        "cpf": {
                                            "type": "string",
                                            "description": "O cpf do usuario da biblioteca"
                                        },
                                        "senha": {
                                            "type": "string",
                                            "description": "A senha do usuario da biblioteca"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro na requisição"
                    },
                    "500": {
                        "description": "Erro interno do servidor"
                    }
                }
            }
        },
        "/userController/deleteUser": {
            "delete": {
                "summary": "Deleta o usuario",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Resposta de sucesso ao deletar o usuario",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "description": "O ID do usuario da biblioteca"
                                        },
                                        "nome": {
                                            "type": "string",
                                            "description": "O nome do usuario da biblioteca"
                                        },
                                        "email": {
                                            "type": "integer",
                                            "description": "O email do usuario da biblioteca"
                                        },
                                        "cpf": {
                                            "type": "string",
                                            "description": "O cpf do usuario da biblioteca"
                                        },
                                        "senha": {
                                            "type": "string",
                                            "description": "A senha do usuario da biblioteca"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro interno do servidor"
                    }
                }
            }
        }
    },
    "components":{
        "schemas": {
            "itemController":{
                "type":"object",
                "required":[
                    "id",
                    "autor",
                    "ano_lançamento",
                    "titulo"
                ],
                "properties":{
                    "id":{
                        "type": "integer",
                        "example": 1
                    },
                    "nome":{
                        "type":"string",
                        "example": "Matheus"
                    },
                    "email":{
                        "type":"string",
                        "example": "clientebiblioteca@gmail.com"
                    },
                    "cpf":{
                        "type":"string",
                        "example": "000.000.000-01"
                    },
                    "senha":{
                        "type":"string",
                        "example": "contaparabiblioteca"
                    }
                }
            }
        }
    }
}
